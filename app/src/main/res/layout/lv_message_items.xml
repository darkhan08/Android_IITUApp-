<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/asd"
        android:id="@+id/message_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurzhan Mukazhanov, PHD"
        android:id="@+id/sender_message"
        android:layout_toRightOf="@+id/message_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_message"
        android:id="@+id/title_of_message"
        android:text="Midterm next week"
        android:layout_toRightOf="@+id/message_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:maxLines="3"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_alignParentRight="true"
        android:id="@+id/date_message"
        android:textSize="13sp"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        >
        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term: "
            android:textSize="17sp"
            android:paddingTop="2dp"
            android:textColor="@color/colorBlue"

            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_toRightOf="@+id/term"
            android:layout_marginLeft="5dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/term"
        android:layout_marginTop="15dp"
        android:id="@+id/lin_layout"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >

        <TextView
            android:id="@+id/code_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Code"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Course name"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/credit_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CR"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ects_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ECTS"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/grade_name"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grade"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/lg_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LG"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/point_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Point"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/traditional_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Traditional"
            style="@style/customTextStyle"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_transcription"
            android:dividerHeight="20.0sp"
            android:divider="@null"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            />
</LinearLayout>